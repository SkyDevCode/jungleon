<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="egovframework.itgcms.core.slides.service.impl.MngrSlidesMapper">

	<sql id="slidesColumn">
		slides_idx,
		slides_code,
	 	slides_name,
	 	slides_type,
	    slides_etc1,
	    slides_etc2,
	    useyn,
	    regdt,
	    upddt,
	    regmemid,
	    updmemid
	</sql>

	<sql id="slideItemColumn">
		slitem_idx,
		slides_idx,
		slitem_title,
	 	slitem_img,
	 	slitem_imgalt,
	 	slitem_linkgubun,
 		slitem_linkTimg,
	 	slitem_linkTtxt,
	 	slitem_linktcolor,
	 	slitem_linkSimg,
	 	slitem_linkStxt,
	 	slitem_linkscolor,
	 	slitem_linkbtn,
	 	slitem_linkurl,
	 	slitem_linkPosHor,
	 	slitem_linkPosVer,
	 	slitem_linktype,
	 	slitem_order,
	    slitem_etc1,
	    slitem_etc2,
	    useyn,
	    regdt,
	    upddt,
	    regmemid,
	    updmemid
	</sql>

	<sql id="slideslistWhere">
	/*slideslistWhere*/
		<where>
		    delyn = 'N'
		    AND slides_site_code = #{siteCode}
		    <if test="slidesIdx != null and slidesIdx != ''">
		 	AND	slides_idx = #{slidesIdx}
			</if>
			<if test="useyn != null and useyn != ''">
		 	AND	useyn = #{useyn}
			</if>
	  	</where>
	</sql>
	<sql id="slideItemlistWhere">
	/*slideItemlistWhere*/
		<where>
		    delyn = 'N'
		    <if test="slidesIdx != null and slidesIdx != ''">
		 	AND	slides_idx = #{slidesIdx}
			</if>
			<if test="slitemIdx != null and slitemIdx != ''">
		 	AND	slitem_idx = #{slitemIdx}
			</if>
			<if test="useyn != null and useyn != ''">
		 	AND	useyn = #{useyn}
			</if>
	  	</where>
	</sql>

	<select id="selectMngrSlidesList" parameterType="itgMap" resultType="itgMap">
		/*selectMngrSlidesList*/
		SELECT <include refid="slidesColumn" />
		  FROM t_slides
		<include refid="slideslistWhere" />
		 ORDER BY useyn desc, slides_idx asc
	</select>

	<select id="mngrSlidesListTotCnt" parameterType="itgMap" resultType="int">
		/*mngrSlidesListTotCnt*/
		SELECT count(*) totcnt
		  FROM t_slides
		<include refid="slideslistWhere" />
	</select>

	<insert id="insertMngrSlidesProc" parameterType="itgMap">
		<selectKey resultType="int" keyProperty="slidesIdx" order="BEFORE">
			SELECT T_SLIDES_SEQ.nextval FROM DUAL
		</selectKey>
		/*insertMngrSlidesProc*/
		INSERT INTO t_slides (
			slides_idx,
			slides_code,
			slides_name,
			slides_type,
			regmemid,
			updmemid,
			slides_site_code
		)
		VALUES (
			#{slidesIdx},
			#{slidesCode},
			#{slidesName},
			#{slidesType},
			#{regmemid},
			#{regmemid},
			#{siteCode}
		)
	</insert>

	<update id="updateMngrSlidesProc" parameterType="itgMap">
		/*updateMngrSlidesProc*/
		update t_slides set
			slides_code 		= #{slidesCode},
			slides_name 		= #{slidesName},
			slides_type 		= #{slidesType},
			useyn 				= #{useyn},
			upddt				= SYSDATE,
			updmemid 			= #{updmemid}
		where
			slides_idx 			= #{slidesIdx}

	</update>

	<update id="deleteMngrSlidesProc" parameterType="itgMap">
		/*deleteMngrSlidesProc*/
		update t_slides set
			delyn		= 'Y' ,
			deldt		= SYSDATE,
			delmemid 	= #{delmemid}
		where
			slides_idx 	= #{slidesIdx}

	</update>

	<select id="selectMngrSlides" parameterType="itgMap" resultType="itgMap">
		/*selectMngrSlides*/
		SELECT <include refid="slidesColumn" />
		  FROM t_slides
		<include refid="slideslistWhere" />
		 ORDER BY upddt desc
	</select>


	<select id="mngrSlideItemList" resultType="itgMap">
		/*mngrSlideItemList*/
		SELECT <include refid="slideItemColumn" />
		  FROM t_slide_item
		<include refid="slideItemlistWhere" />
		 ORDER BY useyn desc, slitem_order asc
	</select>

	<select id="mngrSlideItemListTotCnt" resultType="int">
		/*mngrSlideItemListTotCnt*/
		SELECT count(*) totcnt
		  FROM t_slide_item
		<include refid="slideItemlistWhere" />
	</select>

	<insert id="insertSlideItemProc" parameterType="itgMap">
		<selectKey resultType="int" keyProperty="slitemIdx" order="BEFORE">
			select T_SLIDE_ITEM_SEQ.nextval from DUAL
		</selectKey>
		/*insertSlideItemProc*/
		INSERT INTO t_slide_item (
			slitem_idx,
			slides_idx,
			slitem_title,
		 	slitem_img,
		 	slitem_imgalt,
		 	slitem_linkgubun,
		 	<if test="slitemLinkgubun == 2">
		 	slitem_linkTimg,
		 	slitem_linkTtxt,
		 	slitem_linktcolor,
		 	slitem_linkSimg,
		 	slitem_linkStxt,
		 	slitem_linkscolor,
		 	slitem_linkbtn,
		 	slitem_linkPosHor,
		 	slitem_linkPosVer,
		 	</if>
		 	slitem_linkurl,
		 	slitem_linktype,
		 	slitem_order,
		    regmemid
		)
		VALUES (
			#{slitemIdx},
			#{slidesIdx},
			#{slitemTitle},
		 	#{slitemImg},
		 	#{slitemImgalt},
		 	#{slitemLinkgubun},
		 	<if test="slitemLinkgubun == 2">
		 	#{slitemLinktimg},
		 	#{slitemLinkttxt},
		 	#{slitemLinktcolor},
		 	#{slitemLinksimg},
		 	#{slitemLinkstxt},
		 	#{slitemLinkscolor},
		 	#{slitemLinkbtn},
		 	#{slitemLinkposhor},
		 	#{slitemLinkposver},
		 	</if>
		 	#{slitemLinkurl},
		 	#{slitemLinktype},
		 	#{slitemOrder},
		    #{regmemid}
		)
	</insert>

	<update id="updateMngrSlideItemProc" parameterType="itgMap">
		/*updateMngrSlideItemProc*/
		update t_slide_item set
			slitem_title		= #{slitemTitle},
		 	slitem_img			= #{slitemImg},
		 	slitem_imgalt		= #{slitemImgalt},
		 	slitem_linkgubun	= #{slitemLinkgubun},
		 	<if test="slitemLinkgubun == 2">
		 	slitem_linkTimg		= #{slitemLinktimg},
		 	slitem_linkTtxt		= #{slitemLinkttxt},
		 	slitem_linktcolor	= #{slitemLinktcolor},
		 	slitem_linkSimg		= #{slitemLinksimg},
		 	slitem_linkStxt		= #{slitemLinkstxt},
		 	slitem_linkscolor	= #{slitemLinkscolor},
		 	slitem_linkbtn		= #{slitemLinkbtn},
		 	slitem_linkPosHor	= #{slitemLinkposhor},
		 	slitem_linkPosVer	= #{slitemLinkposver},
		 	</if>
		 	<if test="slitemLinkgubun != 0 and slitemLinkgubun != '' ">
		 	slitem_linkurl		= #{slitemLinkurl},
		 	slitem_linktype		= #{slitemLinktype},
		 	</if>
		 	slitem_order		= #{slitemOrder},
			useyn 				= #{useyn},
			upddt				= SYSDATE,
			updmemid 			= #{updmemid}
		where
			slitem_idx 			= #{slitemIdx}

	</update>

	<update id="deleteMngrSlideItemProc" parameterType="itgMap">
		/*deleteMngrSlideItemProc*/
		update t_slide_item set
			delyn		= 'Y' ,
			deldt		= SYSDATE,
			delmemid 	= #{delmemid}
		where
			slitem_idx 	= #{slitemIdx}

	</update>

	<select id="selectMngrSlideItem" parameterType="itgMap" resultType="itgMap">
		/*selectMngrSlideItem*/
		SELECT slitem_idx,slides_idx,slitem_title,slitem_img,
	 	dbms_lob.substr(slitem_imgalt, 4000, 1 ) as slitem_imgalt,slitem_linkgubun,
 		slitem_linkTimg,slitem_linkTtxt,slitem_linktcolor,slitem_linkSimg,slitem_linkStxt,slitem_linkscolor,
	 	slitem_linkbtn,slitem_linkurl,slitem_linkPosHor,slitem_linkPosVer,slitem_linktype,slitem_order,
	    slitem_etc1,slitem_etc2,useyn,regdt,upddt,regmemid,updmemid
		  FROM t_slide_item
		  <include refid="slideItemlistWhere" />
		 ORDER BY upddt desc
	</select>
</mapper>